#include <iostream>
#include <cmath>
#include <iomanip>
#include <ios>
using namespace std;

int main()
{
    cout <<"Hello, world"<< endl;

    int x;
    cout <<"Enter x"<<endl;
    cin >> x;
    int x_1 = 3 * pow (x, 5) + 3 * pow (x, 3) -1;
    cout << setprecision(3)<< x_1<< endl;

    int a;
    cout <<"Enter a"<< endl;
    cin >> a;
    int a_2 = 2*abs(a)+sqrt(4+3*a);
    cout << showpos << a_2 << endl;

    bool k, l, m, n;
    cout <<"Enter k, l, m, n" << endl;
    cin >> k >> l >> m >> n;
    bool r_3 = (n||(m^!k)&&!l);
    cout << boolalpha << r_3 << endl;

    short int b;
    cout << "Enter b" << endl;
    cin >> b;
    int b_4 = pow(2, b);
    cout << dec << b_4 << endl;
    cout << oct << b_4 << endl;

    unsigned short int c, d, e, f;
    cout << "Enter c, d, e, f" << endl;
    cin >> c >> d >> e >> f;
    unsigned short int r_5 = (! (c || d)) && (e ^ f);
    cout << hex << showbase << r_5 << endl;
    
    system ("pause");
    retutn 0;
}
