#include <iostream>
#include <vector> 

using namespace std; 

int main ()
{
    vector <int> vec1;
    int size=30;
    vec1 = new int [size];
    for (int i=0; i<size; i++)
    {
        vec1.push_back (rand()%201-100);
    }
    int temp;
    for (int i=0; i<size-1; i++)
    {
        for (int j=0; j<size-i-1; j++)
        {
            if (vec1[j]>vec1[j+1])
            {
                temp= vec1[j];
                vec1[j]=vec1[j+1];
                vec1[j+1]=temp;
            }
        }
    }
    for (int i=0; i<size; i++)
    {
        cout << vec1 << " ";
    }
    cout << endl;
    
    return 0;
}

int main()
{
    vector <int> vec2;
    int size=30;
    vec2 = new int [size];
    for (int i=0; i<size; i++)
    {
        vec2.push_back (rand()%201-100);
    }
    int min=0;
    int men=0;
    for (int i=0; i<size; i++)
    {
        min=i;
        for (int j=i+1; j<size; j++)
        min = (vec2[j]<vec2[min] ? j:min);
        if (i!=min)
        {
            men=vec2[i];
            vec2[i]=vec2[min];
            vec2[min]=men;
        }
    }
     for (int i=0; i<size; i++)
    {
        cout << vec1 << " ";
    }
    cout << endl;
    
    return 0;
}

int main()
{
    vector <int> vec2;
    int size=30;
    vec2 = new int [size];
    for (int i=0; i<size; i++)
    {
        vec2.push_back (rand()%201-100);
    }
    
    
    

    merge(int vec(30), int l, int h, int m) 
    {
        int i, j, k, c[30];
        i = l;
        k = i;
        j = m + 1;
        while ((i <= m) && (j <= h))
        {
            if (vec[i] < vec[j])
            {
                c[k] = vec[i];
                ++k; ++i;
            }
            else
                {
                c[k] = vec[j];
                ++k; ++j;
                }
        }
        while (i <= m) 
        {
            c[k] = vec[i];
            k++;
            i++;
        }
        while (j <= h)
        {
            c[k] = vec[j];
            k++;
            j++;
        }
        for (int s = l; s < k; ++s) vec[s] = c[s];
    }
    cout << "Sorted array: ";
    for (int s = 0; s < 30; s++)
    {
        cout << vec[s] << endl;
    }
    
    system(pause);
    return 0;
}
