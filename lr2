#include <iostream>
#include <cmath>

using namespace std;

int main ()
{
    cout << "ASCII:" << endl;
    for (int i = 0; i <= 255; i++)
    {
        cout << "code = " << i << "\t" << "char = " << (char)i << endl;
    }

    cout << "enter symbols" << endl;
    cin >> a;
    if ((a >= '0') && (a <= '9')) cout << "digit" << endl;
    else if (((a >= 'A') && (a <= 'Z')) || ((a >= 'a') && (a <= 'z'))) cout << "letter" << endl;
    else cout << "symbols unknown" << endl;

    unsigned int x;
    cout << "Enter x" << endl;
    cin >> x;
    double y = 0;
    int z = x % 5;
    switch (z)
    {
        case 0: y = pow(x, 2); break;
        case 1: y = x; break;
        case 2: y = 0; break;
        case 3: y = -x; break;
        case 4: y = -1; break;
    }
    cout << y << endl;

    double  x_4;
    int n=1, e;
    cout << "Enter the accuracy" << endl;
    cin >> e;
    y_1 = cos(x_4);
    y_2 = pow(-1,n) * pow(x, 2*n) / 2*n;
    while ((y_2 - y_1) >= e
    {
        n++
        y_2 = y_2 + (pow(-1,n) * pow(x, 2*n) / 2*n)
    }
    cout << "For accuracy " << e << " required " << n << " interations " << endl;
    

    system (pause);
    return 0;
}
